{{#if error}}
    <div class="error-container">
        <div class="error-message">
            {{error}}
        </div>
    </div>
{{/if}}

<div class="register-container">
    <h2>Register</h2>
    <form action="" method="post">
        <div>
            <label>Email:</label>
            <input type="text" name="email" value="{{#if email}}{{email}}{{/if}}">
        </div>

        <div>
            <label>First Name:</label>
            <input type="text" name="first_name"  value="{{#if first_name}}{{first_name}}{{/if}}">
        </div>

        <div>
            <label>Last Name:</label>
            <input type="text" name="last_name"  value="{{#if last_name}}{{last_name}}{{/if}}">
        </div>

        <div>
            <label>Password:</label>
            <input type="password" name="password">
        </div>

        <div>
            <label>Repass:</label>
            <input type="password" name="repass">
        </div>

        <div>
            <label>Enter the code below:</label>
            <div class="captcha-code">{{captcha}}</div>
            <input type="text" name="captcha" maxlength="6">
            <a href="/register" class="refresh-button">New Code</a>
        </div>

        <button type="submit">Register</button>
    </form>

    <p>Already have an account? <a href="/login">Login</a></p>
</div>